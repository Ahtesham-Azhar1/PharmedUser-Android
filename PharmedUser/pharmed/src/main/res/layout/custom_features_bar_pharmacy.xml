<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/open_24_7"
        android:layout_width="@dimen/features_tag_size"
        android:layout_height="@dimen/features_tag_size"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/online_orders"
        app:layout_constraintHorizontal_chainStyle="packed"
        android:src="@drawable/icon_feature_24_7"/>

    <TextView
        android:id="@+id/open_24_7_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/open_24_7"
        app:layout_constraintStart_toStartOf="@id/open_24_7"
        app:layout_constraintEnd_toEndOf="@id/open_24_7"
        android:text="Pharmacy is open 24/7"
        android:textColor="@color/white"
        android:background="@drawable/pd_background_toolbar"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:alpha="0.8"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/online_orders"
        android:layout_width="@dimen/features_tag_size"
        android:layout_height="@dimen/features_tag_size"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/open_24_7"
        app:layout_constraintEnd_toStartOf="@id/delivery"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:src="@drawable/icon_feature_online"/>

    <TextView
        android:id="@+id/online_orders_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/online_orders"
        app:layout_constraintStart_toStartOf="@id/online_orders"
        app:layout_constraintEnd_toEndOf="@id/online_orders"
        android:text="Pharmacy receives Online Orders"
        android:textColor="@color/white"
        android:background="@drawable/pd_background_toolbar"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:alpha="0.8"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/delivery"
        android:layout_width="@dimen/features_tag_size"
        android:layout_height="@dimen/features_tag_size"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/online_orders"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/icon_feature_delivery" />

    <TextView
        android:id="@+id/delivery_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/delivery"
        app:layout_constraintStart_toStartOf="@id/delivery"
        app:layout_constraintEnd_toEndOf="@id/delivery"
        android:text="Pharmacy provides delivery"
        android:textColor="@color/white"
        android:background="@drawable/pd_background_toolbar"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:alpha="0.8"
        android:visibility="gone"/>

</androidx.constraintlayout.widget.ConstraintLayout>