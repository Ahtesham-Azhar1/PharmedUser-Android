<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Transparent" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@android:color/transparent</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="my_progress_bar_circle">
        <item name="android:indeterminateDrawable">@drawable/progress_bar_animation</item>
        <item name="android:minWidth">30dp</item>
        <item name="android:minHeight">30dp</item>
        <item name="android:maxWidth">1000dp</item>
        <item name="android:maxHeight">1000dp</item>
    </style>

    <!--Theme of Custom Dialogues-->
    <style name="CustomDialog" parent="Theme.AppCompat.Light.Dialog.MinWidth">
        <item name="android:windowAnimationStyle">@style/CustomDialogAnimation</item>
    </style>

    <!-- Custom Dialogues Animation-->
    <style name="CustomDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/stay_still</item>
        <item name="android:windowExitAnimation">@anim/stay_still</item>
    </style>

    <style name="progressBarStyleWhite" parent="@style/Theme.AppCompat">
        <item name="colorAccent">@color/white</item>
    </style>

    <style name="progressBarStyleBlue" parent="@style/Theme.AppCompat">
        <item name="colorAccent">@color/blue</item>
    </style>

    <style name="ToggleSwitchTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorAccent">@color/pdThemeBlueColorL</item>
        <item name="colorControlActivated">@color/pdThemeBlueColorL</item>
    </style>

    <style name="SpinnerTheme" parent="android:Widget.Spinner">
        <item name="android:background">@drawable/pd_background_dropdown_custom</item>
        <item name="android:spinnerMode">dropdown</item>
        <item name="android:textAppearance">@style/TextViewSpinnerItem</item>
    </style>

    <style name="SpinnerThemed" parent="android:Widget.Spinner">
        <item name="android:background">@drawable/pd_background_dropdown_themed</item>
        <item name="android:spinnerMode">dropdown</item>
    </style>

    <style name="SpinnerThemeYear" parent="android:Widget.Spinner">
        <item name="android:background">@drawable/pd_background_dropdown_year</item>
        <item name="android:spinnerMode">dropdown</item>
    </style>

    <style name="SpinnerThemeMonth" parent="android:Widget.Spinner">
        <item name="android:background">@drawable/pd_background_dropdown_months</item>
        <item name="android:spinnerMode">dropdown</item>
    </style>

    <style name="TextViewSpinnerItem" parent="@android:style/Widget.TextView.SpinnerItem">
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body1</item>
        <item name="android:textColor">@color/textColorNightMode</item>
        <item name="android:background">@color/editTextBackgroundNightMode</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TextAppearanceMenuTitle">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="TextAppearanceMenuTitleNightMode">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="NavigationView"  parent="Base.Theme.AppCompat">
        <item name="android:listDivider">@color/grey</item>
        <item name="android:layout_marginBottom">02dp</item>

    </style>

    <style name="NavigationViewNighMode"  parent="Base.Theme.AppCompat">
        <item name="android:listDivider">@color/textColorNightMode</item>
    </style>
</resources>